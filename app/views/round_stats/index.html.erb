<h1>Listing map_stats</h1>

<table id="round_stats" class="display">
  <thead>
    <tr>
      <th>Name</th>
      <th>Kills</th>
      <th>Deaths</th>
      <th>% Hits</th>
      <th>% Headshots</th>
    </tr>
  </thead>
  <tbody>
    <% @round_stats.each do |round_stat| %>
    <tr>
      <td align="right"><%= round_stat.name %></td>
      <td align="right"><%= round_stat.kills %></td>
      <td align="right"><%= round_stat.deaths %></td>
      <td align="right"><%= (100 * round_stat.hits.to_f/round_stat.shots).round(2) %></td>
      <td align="right"><%= (100 * round_stat.headshots.to_f/round_stat.shots).round(2) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

