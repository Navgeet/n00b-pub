<table id="perma_stats" class="display">
  <thead>
    <tr>
      <th>Name</th>
      <th>Kills</th>
      <th>Deaths</th>
      <th>Kills/Death</th>
      <th>% Hits</th>
      <th>% Headshots</th>
      <th>Time Played</th>
    </tr>
  </thead>
  <tbody>
    <% @perma_stats.each do |perma_stat| %>
    <tr>
      <td><%= link_to perma_stat.name, "p/".concat(perma_stat.name.parameterize.underscore)  %></td>
      <td><%= perma_stat.kills %></td>
      <td><%= perma_stat.deaths %></td>
      <td><%= (perma_stat.kills.to_f/perma_stat.deaths).round(1) %></td>
      <td><%= (100 * perma_stat.hits.to_f/perma_stat.shots).round(2) %></td>
      <td><%= (100 * perma_stat.headshots.to_f/perma_stat.shots).round(2) %></td>
      <td><%= "#{perma_stat.time.round(1)} hrs" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
